@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="w3-content w3-container">

    <div class="w3-row">
        <h2>@ViewData["Title"]</h2>
        <hr/>
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <form method="post">
            <div class="w3-container w3-half">
                
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="w3-input" disabled="disabled" />
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>

                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="input-group">
                            <input asp-for="Email" class="w3-input" />
                            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                        </div>
                    }
                    else
                    {
                        <input asp-for="Email" class="w3-input" />
                        <br>
                        <button asp-action="SendVerificationEmail" class="accordian1 w3-text-white w3-padding w3-block w3-button w3-round">Send verification email</button>
                        <br>
                    }
                    
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="w3-input" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                
            </div>  

            <div class="w3-container w3-half" >

                
                
            </div>  

            <div class="w3-row"><p><br></p></div>

            <button type="submit" class="accordian1 w3-text-white w3-padding w3-block w3-button w3-round">Save Changes</button>
            
        </form>
        
    </div>
    <div class="w3-row"><p><br></p></div>
    
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
