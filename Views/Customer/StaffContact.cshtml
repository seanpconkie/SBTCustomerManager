@model SBTCustomerManager.Models.CustomerViewModels.StaffMemberViewModel
@{
    ViewData["Title"] = @Model.UserDetails.Name;
}

<div class="w3-bar">
    @Html.Partial("_StaffNavBar",Model)
</div>
<hr>

@Html.Partial("_StatusMessage", Model.StatusMessage)
<form method="post">
    <div class="w3-row-padding w3-margin-top">
        <div class="w3-bar">
            <button type="submit" class="w3-button w3-bar-item w3-right accordian1 w3-text-white" data-toggle="popover" data-trigger="focus" data-content="Save Changes" data-placement="top" onclick="document.getElementById('id01').style.display='block'"><i class="fas fa-save"></i></button>
            <button type="reset" class="w3-button w3-bar-item w3-right accordian2 w3-text-white" data-toggle="popover" data-trigger="focus" data-content="Reset" data-placement="top"><i class="fas fa-redo"></i></button>
        </div>

        <div class="w3-half">
            <div class="w3-container">
                <div class="form-group">
                    <label class=""><i class="fas fa-at fa-fw w3-margin-right"></i> Contact e-mail</label>
                    <div class="input-group">
                        <input asp-for="UserDetails.UserContact.Email" class="w3-input"/>
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    <span asp-validation-for="UserDetails.UserContact.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class=""><i class="fas fa-mobile-alt fa-fw w3-margin-right"></i> Mobile Phone</label>
                    <input class=" w3-input" asp-for="UserDetails.UserContact.MobilePhone" />
                    <span asp-validation-for="UserDetails.UserContact.MobilePhone" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="w3-half">
            <div class="w3-container">
                <div class="form-group">
                    <label class=""><i class="fas fa-phone fa-fw w3-margin-right"></i> Work Phone</label>
                    <input class=" w3-input" asp-for="UserDetails.UserContact.WorkPhone" />
                    <span asp-validation-for="UserDetails.UserContact.WorkPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class=""><i class="fas fa-phone fa-fw w3-margin-right"></i> Other Phone</label>
                    <input class=" w3-input" asp-for="UserDetails.UserContact.OtherPhone" />
                    <span asp-validation-for="UserDetails.UserContact.OtherPhone" class="text-danger"></span>
                </div>     
            </div>
        </div>
    </div>
    <hr>
    <div class="w3-row-padding">
        <div class="w3-half">
            <div class="w3-container">
                <div class="form-group">
                    <input asp-for="UserDetails.Id" class="w3-input" type="hidden"/>
                    <input asp-for="UserDetails.UserContactId" class="w3-input" type="hidden"/>
                    <input asp-for="UserDetails.UserId" class="w3-input" type="hidden"/>
                </div>
                <div id="locationField">
                    <label><i class="fas fa-map-marker fa-fw w3-margin-right"></i>Address</label>
                    <input id="autocomplete" placeholder="Enter your address"onFocus="geolocate()" type="text" class="w3-input"/>
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.UserContact.AddressLine1"></label>
                    <input asp-for="UserDetails.UserContact.AddressLine1" class="w3-input" id="route"/>
                    <span asp-validation-for="UserDetails.UserContact.AddressLine1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.UserContact.PostTown"></label>
                    <input asp-for="UserDetails.UserContact.PostTown" class="w3-input" id="postal_town"/>
                    <span asp-validation-for="UserDetails.UserContact.PostTown" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.UserContact.Country"></label>
                    <input asp-for="UserDetails.UserContact.Country" class="w3-input" id="country"/>
                    <span asp-validation-for="UserDetails.UserContact.Country" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="w3-half">
            <div class="w3-container">
                <div class="form-group">
                    <label asp-for="UserDetails.UserContact.BuildingNumber"></label>
                    <input asp-for="UserDetails.UserContact.BuildingNumber" class="w3-input" id="street_number"/>
                    <span asp-validation-for="UserDetails.UserContact.BuildingNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.UserContact.AddressLine2"></label>
                    <input asp-for="UserDetails.UserContact.AddressLine2" class="w3-input" />
                    <span asp-validation-for="UserDetails.UserContact.AddressLine2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.UserContact.County"></label>
                    <input asp-for="UserDetails.UserContact.County" class="w3-input" id="locality"/>
                    <span asp-validation-for="UserDetails.UserContact.County" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.UserContact.Postcode"></label>
                    <input asp-for="UserDetails.UserContact.Postcode" class="w3-input" id="postal_code"/>
                    <span asp-validation-for="UserDetails.UserContact.Postcode" class="text-danger"></span>
                </div>          
            </div>
        </div>
    </div>
</form>
@Html.Partial("_Loading")

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $("[data-toggle='popover']").popover({ trigger: "hover" });
    </script>
    <script src="https://s3.amazonaws.com/sbt-solutions.co.uk/addressAutoComplete.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAOfCiFMuWl_6DzM4BsVFPYZ7ZvWmHcKR0&libraries=places&callback=initAutocomplete" async="" defer="defer"></script>
}
