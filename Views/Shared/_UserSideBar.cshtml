@using Microsoft.AspNetCore.Identity
@using SBTCustomerManager.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="w3-container w3-padding w3-button w3-block w3-border-bottom w3-left-align"><i class="fas fa-user-circle fa-fw w3-margin-right"></i>Account Details</a>
    <a asp-area="" asp-controller="Company" asp-action="Index" title="Company" class="w3-container w3-padding w3-button w3-block w3-border-bottom w3-left-align"><i class="fas fa-building fa-fw w3-margin-right"></i>Company Details</a>
    <a asp-area="" asp-controller="Customer" asp-action="Index" title="Customer" class="w3-container w3-padding w3-button w3-block w3-border-bottom w3-left-align"><i class="fas fa-users fa-fw w3-margin-right"></i>Customers</a>
    <a asp-area="" asp-controller="Role" asp-action="Index" title="Role" class="w3-container w3-padding w3-button w3-block w3-border-bottom w3-left-align" onclick="document.getElementById('id01').style.display='block'"><i class="fas fa-user-secret  fa-fw w3-margin-right"></i>Manage Roles</a>
    <a asp-area="" asp-controller="Subscription" asp-action="Index" title="Subscription" class="w3-container w3-padding w3-button w3-block w3-border-bottom w3-left-align"><i class="fas fa-dollar-sign fa-fw w3-margin-right"></i>Manage Subscriptions</a>
    <a asp-area="" asp-controller="Messages" asp-action="Messages" title="Messages" class="w3-container w3-padding w3-button w3-block w3-border-bottom w3-left-align"><i class="fas fa-envelope fa-fw w3-margin-right"></i>Messages</a>
    <a asp-area="" asp-controller="SiteSettings" asp-action="Index" title="SiteSettings" class="w3-container w3-padding w3-button w3-block w3-border-bottom w3-left-align"><i class="fas fa-cogs fa-fw w3-margin-right"></i>Site Settings</a>        
}
else
{
     
}

    <!-- Modal that pops up when you click on to add or delete role -->
    <div id="id01" class="w3-modal" style="z-index:4">
        <div class="w3-modal-content w3-animate-zoom" style="width: 400px">
            <div class="w3-container w3-padding-large">
                <div class="w3-center w3-padding-large"><i class="fa fa-spinner fa-spin fa-3x fa-fw"></i></div>
                <h2 class="w3-center">Please wait....</h2>
            </div>
        </div>    
    </div>